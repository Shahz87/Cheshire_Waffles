<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Title of the page -->
    <title>@ViewData["Title"] - Cheshire Waffles</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Custom site styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <!-- Header section -->
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <!-- Brand name linking to home page -->
                <a class="navbar-brand" asp-area="" asp-page="/Index">Cheshire Waffles</a>
                <!-- Toggle button for collapsing navigation menu -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Navigation links -->
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav">
                        <!-- Home page link -->
                        <a class="nav-item nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        <!-- Menu page link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Menu">Menu</a>
                        </li>
                        <!-- Contact page link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Contact">Contact</a>
                        </li>
                        <!-- Checkout page link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Checkout">Cart</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav navbar-right">
                        <!-- Admin page link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Admin">Admin</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Page hero section  -->
    <section class="container col-xxl-8 px-4 py-5">
        <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
            <div class="col-10 col-sm-8 col-lg-6">
                <img src="~/images/home.jpg" class="d-block mx-lg-auto img-fluid" alt="Chester Waffles" width="700"
                    height="500" loading="lazy">
            </div>
            <div class="col-lg-6">
                <h1 class="display-5 fw-bold lh-1 mb-3">Cheshire Waffles</h1>
                <p class="lead">We are passionate about creating delicious waffles using high-quality ingredients. Our
                    goal is to provide a memorable dining experience for our customers.</p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                    <button type="button" class="btn btn-primary btn-lg px-4 me-md-2" asp-page="/Menu" >Menu</button>
                </div>
            </div>
        </div>
    </section>
    <!-- Main content area -->
    <div class="container">
        <main role="main" class="pb-3">
            <!-- Render the main body content here -->
            @RenderBody()
        </main>
    </div>

    <!-- Footer section -->
    <footer class="py-3 my-4">
        <ul class="nav justify-content-center border-bottom pb-3 mb-3">
            <li class="nav-item"><a class="nav-link px-2 text-muted" asp-area="" asp-page="/Index">Home</a></li>
            <li class="nav-item"><a class="nav-link px-2 text-muted" asp-area="" asp-page="/Menu">Menu</a></li>
            <li class="nav-item"><a class="nav-link px-2 text-muted" asp-area="" asp-page="/Contact">Contact</a></li>
        </ul>
        <p class="text-center text-muted">&copy; 2024 Waffle Restaurant. All Rights Reserved.</p>
        <a href="https://validator.w3.org/#validate_by_uri">Validate HTML</a>
        <a href="https://jigsaw.w3.org/css-validator/">Validate CSS</a>
        <a asp-page="/Admin/Admin">Admin</a>
    </footer>

    <!-- JavaScript dependencies -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <!-- Custom JavaScript -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Render additional scripts section if present -->
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
