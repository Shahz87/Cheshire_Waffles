@page "{id:int}"
@model Cheshire_Waffles.Pages.Admin.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">Menu Item Details</h1>

<div class="mb-3">
    <h4>Name</h4>
    <p>@Model.MenuItem.Name</p>
</div>
<div class="mb-3">
    <h4>Description</h4>
    <p>@Model.MenuItem.Description</p>
</div>
<div class="mb-3">
    <h4>Price</h4>
    <p>@Model.MenuItem.Price</p>
</div>
<div class="mb-3">
    <h4>Image</h4>
    <p><img src="~/images/menu/@Model.MenuItem.ImageUrl" alt="Menu Item Image" class="img-fluid" style="max-width: 200px;" /></p>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.MenuItem.Id" class="btn btn-primary me-2">Edit</a>
    <a asp-page="./Admin" class="btn btn-secondary">Back to List</a>
</div>

